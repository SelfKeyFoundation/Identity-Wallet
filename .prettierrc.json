{
	"printWidth": 100,
	"tabWidth": 4,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "none",
	"bracketSpacing": true,
	"arrowParens": "avoid",
	"proseWrap": "never",
	"overrides": [
		{
			"files": "*.{yml,yaml}",
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		}
	]
}
