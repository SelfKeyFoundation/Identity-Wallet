div(layout-fill, layout="column", layout-align="center center")

    .sk-text-header(style="width: 90%; font-family: ProximaNovaRegular; font-size: 24px; line-height: 1.5; text-align: left; color: #ffffff; user-select: none;") Verify your identity

    #message-container(layout="column", layout-align="center center" style="width: 90%; height: 28px;")

    div(layout="row", style="width: 90%;")
        div(layout="column", flex, style="margin-right: 30px;")
            .sk-box.center-divider(style="height: 400px;")
                .content.sk-documents-setup
                    .setup-header {{texts[currentStep].text1}}
                    .setup-subheader {{texts[currentStep].text2}}
                    .boxes(layout="row", flex)
                        .box(flex, layout="column", layout-align="center center")
                            svg(xmlns="http://www.w3.org/2000/svg" width="34" height="44" viewBox="0 0 34 44")
                                g(fill="#FFF" fill-rule="evenodd")
