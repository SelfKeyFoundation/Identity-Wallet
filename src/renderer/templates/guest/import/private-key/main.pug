.private-key-import-main-container(layout="column", layout-align="start center")
    .title Enter your private key below and press "unlock".
    form(name="theForm", layout="column", layout-align="center center")
        md-input-container.sk-input-box
            label Enter Your Private Key
            input(type="{{formType}}", name="privateKey", id='privateKeyInput', ng-model="userInput.privateKey")
            md-button.outline-gray.smallest.show-password(ng-click="togglePasswordVisibility()")
                span {{ formType == 'password' ? 'show' : 'hide'}}
            div(ng-messages="theForm.privateKey.$error")
                div(ng-message="theForm.privateKey.$error.badPrivateKey") {{ theForm.privateKey.$error.badPrivateKey ? 'Incorrect private key' : '' }}
    md-button.blue(style="", ng-click="unlock($event, theForm)", id='unlockButton', ng-disabled="isUnlocking")
        span {{ isUnlocking ? 'Please wait...' : 'unlock' }}
    .title.warning Warning: Please keep your private keys safe and secure.
