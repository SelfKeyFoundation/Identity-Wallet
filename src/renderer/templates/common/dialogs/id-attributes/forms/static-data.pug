.content
    md-input-container.sk-input-box.sk-input-non-floating
        .label-container
            span.label {{$root.DICTIONARY[idAttributeType]}}
            span.required *
        input(name="input", type="{{singleInputType}}", ng-model="inputs.line1", ng-required="true")
        div(ng-messages="theForm.input.$error")
            div(ng-message="required") This field is required. Please enter {{ $root.DICTIONARY[idAttributeType] }}

.static-data-actions-wrapper
    md-button.outline-gray(ng-click="close($event)")
        span.primary cancel
    md-button.blue(ng-click="save($event, theForm)", ng-disabled="isFormInvalid(theForm)", sk-button-loading="savePromise.$$state.status")
        span.primary save




