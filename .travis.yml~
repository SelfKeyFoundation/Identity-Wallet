os: osx
language: node_js
node_js: 9
cache: yarn
env:
  global:
  - OSENV=travis
  - CLOUDSDK_CORE_DISABLE_PROMPTS=1
before_install:
  - npm i -g gulp-cli electron-packager
  - npm install --global yarn
before_script:
  - yarn dist
script:
  - yarn test
after_script:
  - openssl aes-256-cbc -K $encrypted_40ef2f4394e3_key -iv $encrypted_40ef2f4394e3_iv -in client-secret.json.enc -out client-secret.json -d
  - curl https://sdk.cloud.google.com | bash
  - source $HOME/google-cloud-sdk/path.bash.inc
  - gcloud auth activate-service-account --key-file client-secret.json
  - gsutil cp dist/*.zip gs://selfkey-builds/$TRAVIS_BUILD_NUMBER/
