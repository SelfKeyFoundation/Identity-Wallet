.sk-box.sk-token-box
    .sk-token-box__header(layout="row", layout-align="center start")
        md-icon.sk-token-box__token(md-svg-src="assets/images/icons/{{symbol}}.svg", aria-label="{{symbol}}")
        sk-double-header.sk-token-box__text(header="{{title}}", sub-header="{{symbol}}", flex)
        button.sk-icon-button(ui-sref="member.wallet.manage-token({id: symbol})")
            sk-icon(icon="plus", size-class="sk-token-box__plus")

    .sk-token-box__body
        span {{ balance }}
        span ${{ balanceInUsd | number }} USD

    .sk-token-box__footer
        .sk-horizontal-devider
        .sk-token-box__footer_address-box(layout="row")
            span.sk-token-box__footer_address-box_public-key(ng-if="!isJustCopied", ng-click="copy($event, publicKeyHex)") {{publicKeyHex}}
            span.sk-token-box__footer_address-box_public-key(ng-if="isJustCopied") copied