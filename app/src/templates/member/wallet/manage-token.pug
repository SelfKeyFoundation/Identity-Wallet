.wallet-manage-token-wrappper(layout="column", layout-align="start center", style="margin-top: 40px;")
    .header-content(style="position:relative")
        .logo-section(layout="row")
            sk-icon(icon="{{symbol}}", size-class="icon-size-44x44", style="padding-top:4px")
            .logo-text
                span.text {{name}}
                span.initial {{symbol}}
                sk-icon(icon="close-dialog", size-class="icon-size-36x36", style="position: absolute; right: -18px; top: -18px; cursor: pointer;", ng-click="goToDashboard()")
        .price-section
            span.main-price {{balance}}
            span.secondary-price ${{balanceUsd}} USD
        hr
        .coin-address-section
            span.your-address Your {{name}} Address:
            .generated-address(layout="row", layout-align="start center")
                .address {{publicKeyHex}}
                md-button.smallest.gray.copy
                    span(copy-to-clipboard="publicKeyHex") COPY
        hr(style="margin-top:32px")
        .buttons-section(layout="row")
            button.action-button(layout="row", ng-click="$root.openReceiveTokenDialog($event, {symbol: symbol, publicKeyHex: publicKeyHex})")
                sk-icon(icon="coins", size-class="icon-size-24x23" style="margin: 13px 17px 14px 18px")
                span.receive RECEIVE
            button.action-button(layout="row", style="margin-left:20px", ng-click="$root.openSendTokenDialog($event, symbol, false)")
                sk-icon(icon="sent", size-class="icon-size-24x24", style="margin: 12px 14px 14px 32px")
                span.send SEND
    .body-content
        .activity-text Activity
        sk-linear-progress(ng-if="!transactionsHistoryIsSynced()", style="margin-top:10px;")
        div(ng-if="transactionsHistoryIsSynced()", ng-init="loadTransactionHistory()")
        .list(ng-repeat="activity in transactionsHistoryList track by $index")
            .list-item
                .item-container(layout="row")
                    .date {{ activity.timestamp | date:'MMM'}}
                        span {{activity.timestamp | date:'dd'}}
                    sk-icon(icon="{{ activity.sentTo ? 'paper-plane' : 'coins'}}", size-class="icon-size-34x34", style="margin-left:20px")
                    .sent-receive {{ activity.sentOrReceiveText }}
                    span.sent-receive-text.aqua-blue  {{activity.sentToName}}
                    .coin-change(ng-class="{'aqua-blue': !!activity.sentToName}") {{activity.sentTo ? '- ' : '+ '}} {{activity.value}}

