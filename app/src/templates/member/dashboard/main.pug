.dashboard-content-wrappper(layout="column", layout-align="start center")

    // header
    .dashboard-content-wrappper__header-section(layout="row", layout-align="start center")
        h2.proxima.white SelfKey Dashboard

    // balances
    .dashboard-content-wrappper__content-section(layout="row", layout-align="center center")
        sk-token-box(symbol="key", style="height: 216px;")
        sk-token-box(symbol="eth", style="height: 216px;")
        sk-custom-token-box(style="height: 216px;")

    // my crypto
    .dashboard-content-wrappper__content-section(layout="row", layout-align="center center")
        .sk-box.sk-my-cryptos-box
            .header(layout="row")
                span(flex) My Crypto
                button.sk-icon-button(ng-click="$root.openEditCustomTokenDialog($event)")
                    sk-icon(icon="gear", size-class="icon-size-26x26")
                button.sk-icon-button(ng-class="{'disable-opacity': $root.tokenLimitIsExceed}", ng-click="$root.openAddCustomTokenDialog($event)")
                    sk-icon(icon="plus", size-class="icon-size-26x26")
                    md-tooltip(ng-if="$root.tokenLimitIsExceed",md-direction="left")
                        | <div style="color: #ffffff; font-size:14px; font-weight: bold;"> You've reached the limit and cannot add another token.
                    sk-icon(icon="plus", size-class="icon-size-26x26")
            .sk-horizontal-devider
            sk-circle-pie-chart(data="pieChart", ng-if="totalBalanceInUsd > 0")

    // alerts
    //.dashboard-content-wrappper__content-section(layout="row", layout-align="center center")
        sk-action-logs-box(title="alerts", max-notifications="5")

    // reminders
    //.dashboard-content-wrappper__content-section(layout="row", layout-align="center center")
        sk-reminders-box(title="reminders")

    // transactions
    .dashboard-content-wrappper__content-section(layout="row", layout-align="center center", style="margin-bottom: 40px;")
        .sk-box.transactions-box(style="width: 100%; padding: 20px; display: inline-flex; flex-direction: column;")
            .transactions-box__header
                span(flex, style="font-family: ProximaNovaRegular; font-size: 20px; line-height: 1.8; color: #ffffff;") Transactions
            sk-linear-progress(ng-if="!transactionsHistoryIsSynced()", style="margin-top:10px;")
            div(ng-if="transactionsHistoryIsSynced()", ng-init="setTransactionsHistory()")
            .sk-horizontal-devider(style="margin-top: 20px;")
            span.no-transaction-title(ng-if="transactionsHistoryIsSynced() && !transactionsHistoryList.length") No transactions yet.
            .transactions-box-body
                .list(ng-repeat="activity in transactionsHistoryList track by $index")
                    .list-item
                        .item-container(layout="row")
                            .date {{ activity.timestamp | date:'MMM'}}
                                span {{activity.timestamp | date:'dd'}}
                            sk-icon(icon="{{ activity.sentTo ? 'paper-plane' : 'coins'}}", size-class="icon-size-34x34", style="margin-left:20px")
                            .sent-receive {{ activity.sentOrReceiveText }}
                            span.sent-receive.symbol.no-margins(ng-class="activity.symbol") &nbsp; {{activity.symbol}}
                            span.sent-receive-text.grey  {{activity.sentToName}}
                            .coin-change.symbol(ng-class="activity.symbol") {{activity.sentTo ? '- ' : '+ '}} {{activity.value}}
                        .sk-horizontal-devider(ng-if="transactionsHistoryList.length-1 != $index" style="margin-top: 20px;")
