.wrapper.transition-anim(layout="column", layout-fill, ui-view="main", style="height: 100vh;")

md-sidenav.md-sidenav-right(md-component-id="right")
    .sk-right-sidenav(ng-controller="MemberRightSidenavController", style="height: 100%;")
        .sk-right-sidenav__close-icon(ng-click="close($event)") âœ•
        .sk-right-sidenav__header
            sk-icon(icon="selfkey", size-class="icon-size-39x44")

        .sk-right-sidenav__content(layout="column", layout-align="space-between center", flex)
            .sk-right-sidenav__top-section-container(layout="column")
                .sk-right-sidenav__top-section__item(ng-class="getSelectedClass('member.dashboard')", ng-click="$root.navigate($event, 'member.dashboard.main')")
                    md-icon(md-svg-src="assets/images/icons/dashboard_16px.svg")
                    span Dashboard
                .sk-right-sidenav__top-section__item(ng-class="getSelectedClass('member.marketplace')", ng-click="$root.navigate($event, 'member.marketplace.exchange-list')")
                    md-icon(md-svg-src="assets/images/icons/swap_vertical_16px.svg")
                    span Marketplace
                .sk-right-sidenav__top-section__item(ng-class="getSelectedClass('member.id-wallet')", ng-click="$root.navigate($event, 'member.id-wallet.main')")
                    md-icon(md-svg-src="assets/images/icons/selfkey_id_16px.svg")
                    span SelfKey ID
            .sk-right-sidenav__botton-section-container(layout="column")
                .sk-right-sidenav__bottom-section__item(ng-click="$root.openInBrowser('http://selfkey.org')")
                    span About SelfKey
                .sk-right-sidenav__bottom-section__item(ng-click="$root.openInBrowser('http://idea.selfkey.org')") 
                    span Submit Idea
                .sk-right-sidenav__bottom-section__item(ng-click="$root.openInBrowser('http://help.selfkey.org')")
                    span Help & Support 
        .version v {{ $root.version }}